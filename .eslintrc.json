{
  "plugins": [
    "jest",
    "@typescript-eslint"
  ],
  "extends": [
    "prettier",
    "plugin:github/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 9,
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "rules": {
    "camelcase": "off",
    "filenames/match-regex": "off",
    "i18n-text/no-en": "off",
    "import/named": "off",
    "import/no-namespace": "off",
    "sort-imports": "off"
  },
  "env": {
    "node": true,
    "es6": true,
    "jest/globals": true
  }
}
